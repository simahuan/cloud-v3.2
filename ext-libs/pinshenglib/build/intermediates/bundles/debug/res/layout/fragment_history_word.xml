<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wefi.zhuiju.activity.follow.searchnew.HistoryWordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dominant_background2"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/search_page_padding_left"
        tools:context="com.wefi.zhuiju.activity.follow.searchnew.HistoryWordFragment">


        <LinearLayout
            android:id="@+id/search_history_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/search_title_text_style"
                android:text="@string/search_history"/>

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/search_history_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top">

            </com.wefika.flowlayout.FlowLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/search_hotword_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/search_title_text_style"
                android:text="@string/search_hotword"/>

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/search_hotword_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top">

            </com.wefika.flowlayout.FlowLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
