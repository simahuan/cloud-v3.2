<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/customdialog_title"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:minHeight="100dp"
                android:singleLine="false"
                android:lineSpacingExtra="3dp"
                android:text=""
                android:textColor="@color/customdialog_title"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/custom_dialog_view" />

        <LinearLayout
            android:id="@+id/button_push"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/customdialog_selector"
                android:gravity="center"
                android:textColor="@color/set_sharenet_color"
                android:textSize="18sp" />

            <View
                android:id="@+id/vertical_line"
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/custom_dialog_view" />

            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/customdialog_selector"
                android:gravity="center"
                android:textColor="@color/set_sharenet_color"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>