<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- EditView -->
    <style name="EditText.Normal" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#999999</item>
        <item name="android:background">@drawable/cloud_settings_feedback_bg</item>
        <item name="android:padding">12dp</item> 
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="EditText.Normal.Cursor" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item> 
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/etxt_username</item>
        <item name="android:hint">@string/settings_pls_input_nickname</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#80F9F9F9</item>
        <item name="android:maxLength">10</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:gravity" >center_horizontal|top</item>
    </style>

    <style name="TextMultiLine" parent="EditText.Normal">
        <item name="android:singleLine">false</item>
        <item name="android:lines">7</item>
        <item name="android:gravity">left|top</item>
    </style>

    <style name="EditText.Normalfeed" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#999999</item>
        <item name="android:padding">12dp</item> 
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextMultiLinefeed" parent="EditText.Normalfeed">
        <item name="android:singleLine">false</item>
        <item name="android:lines">7</item>
        <item name="android:gravity">left|top</item>
    </style>

</resources>