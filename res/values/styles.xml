<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- 设置activity切换动画 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!--【指引蒙板】面板弹出框动画-->
    <style name="PopupGuideAnimation" parent="android:Animation" >
        <item name="android:windowEnterAnimation">@anim/anim_popup_guide_step_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_guide_step_exit</item>
    </style>
    
    <!-- TextView -->
    <style name="TextView.BarTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextView.Version" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/settings_about_current_version</item>
        <item name="android:typeface">normal</item>
    </style>

    <!-- TextView -->
    <style name="TextView.BarTitle.Action" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextView.TransferRecord.Item.Normal" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/transferrecord_item_normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextView.TransferRecord.Item.Disable" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/transferrecord_item_disable</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextView.TransferRecord.Item.Status" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/transferrecord_item_disable</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- TextView -->
    <style name="TextView.SettingsSectionTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

    <style name="TextView.SettingsItemTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/setting_item_text_color</item>
        <!-- <item name="android:drawableLeft">@drawable/ic_launcher</item> -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="TextView.SettingsItemArrow" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <!-- settings item bg style -->
    <style name="item_bg_base_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center_vertical</item>
        <!-- <item name="android:paddingTop">12.0dip</item> -->
        <!-- <item name="android:paddingBottom">12.0dip</item> -->
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="item_bg_top_layout" parent="@style/item_bg_base_layout">
        <item name="android:background">@drawable/item_bg_top</item>
    </style>

    <style name="item_bg_mid_layout" parent="@style/item_bg_base_layout">
        <item name="android:background">@drawable/item_bg_mid</item>
    </style>

    <style name="item_bg_bottom_layout" parent="@style/item_bg_base_layout">
        <item name="android:background">@drawable/item_bg_bottom</item>
    </style>

    <style name="item_bg_single_layout_top" parent="@style/item_bg_base_layout">
        <item name="android:background">@drawable/item_bg_single_top</item>
    </style>

    <style name="item_bg_single_layout_normal" parent="@style/item_bg_base_layout">
        <item name="android:background">@drawable/item_bg_single_normal</item>
    </style>

    <style name="item_bg_single_layout_bottom" parent="@style/item_bg_base_layout">
        <item name="android:background">@drawable/item_bg_single_bottom</item>
    </style>

    <style name="listview">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <!--
        <item name="android:divider">@drawable/listview_item_divider_line</item>
        <item name="android:dividerHeight">0.2dp</item>
        -->
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <!-- activity 透明背景 -->
    <style name="translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- activity 透明背景,自定义动画 -->
    <style name="translucent_no_animstyle">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <!-- activity 自定义颜色背景 -->
    <style name="translucentSelf">
        <item name="android:windowBackground">@color/quert_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget">
        <item name="android:textAppearance">?textAppearance</item>
    </style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/app_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
    </style>

    <style name="ProgressBar.Horizontal.StorageSpace" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_storagespace</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>
    <!-- 自定义进度条 -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>
    <!-- 视频播放器进度条样式 -->
    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/video_white_point</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <!-- dialog 样式 -->
    <style name="DialogButton" parent="@android:style/Widget.Button">
        <item name="android:background">#ffff</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/txtsize_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">45dp</item>
    </style>
</resources>