<!-- 这里主要建立应用主题 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Tab.Item" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@drawable/toolbar_item_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme1" parent="android:Theme.Light.NoTitleBar">

        <!-- <item name="android:windowBackground">@android:color/white</item> -->
        <item name="android:textSize">15sp</item>
        <item name="android:windowAnimationStyle">@style/AppActivityAnimation</item>
        <!-- <item name="android:textViewStyle">@style/AppTextView</item> -->
        <item name="android:listViewStyle">@style/AppListView</item>
        <item name="android:gridViewStyle">@style/AppGridView</item>
    </style>

    <!-- 设置activity切换动画 -->
    <style name="AppActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/app_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>

    <style name="AppProgressBarStyleLarge">
        <item name="android:indeterminateDrawable">@drawable/loading</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDuration">600</item>
        <item name="android:minHeight">28.6dp</item>
        <item name="android:maxHeight">28.6dp</item>
    </style>

    <style name="AppSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seek_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/seek_horizontal</item>
        <item name="android:thumb">@drawable/video_white_point</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:maxHeight">1dip</item>
        <item name="android:thumbOffset">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="AppListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="AppGridView" parent="@android:style/Widget.GridView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <!-- Dialog样式 -->

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="AppDialog.NoFrame" parent="AppDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

