<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF"
    >
     <View 
         android:layout_width="match_parent"
         android:layout_height="0.3dp"
         android:background="#CCCCCC"
         android:layout_marginTop="12dp"
         />
     <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:stretchColumns="0" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cloud_settings_feedback_bg"
                android:orientation="vertical"
                 >

                <EditText
                    android:id="@+id/edtFeedbackContent"
                    style="@style/TextMultiLinefeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_setting_feedback_advise" 
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/txt_feedback_face_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:hint="还可以输入200字"
                    android:textColor="#999999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:background="#FFFFFF"
                >

                <EditText
                    android:id="@+id/edtFeedbackName"
                    style="@style/EditText.Normal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:maxLength="20"
                    android:hint="@string/settings_setting_feedback_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                 >

                <EditText
                    android:id="@+id/edtFeedbackContact"
                    style="@style/EditText.Normal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/settings_setting_feedback_email" />
            </LinearLayout>
        </TableLayout>
        
        <View 
         android:layout_marginTop="13dp"
         android:layout_width="match_parent"
         android:layout_height="0.3dp"
         android:background="#CCCCCC"
         android:focusable="false"
         android:focusableInTouchMode="false"
         />
      
      <View 
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="#F9F9F9"
          android:focusable="false"
          android:focusableInTouchMode="false"
          />
</LinearLayout>