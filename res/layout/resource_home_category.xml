<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuCategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent"
    android:clickable="true"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/menuCategoryContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:paddingBottom="17dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="17dp" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnAll"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/down_all_icon"
                    android:text="全部"
                    android:textColor="#666666" />

                <Button
                    android:id="@+id/btnImage"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/down_pic_icon"
                    android:text="图片"
                    android:textColor="#666666" />

                <Button
                    android:id="@+id/btnVideo"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/down_video_icon"
                    android:text="视频"
                    android:textColor="#666666" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnMusic"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/down_music_icon"
                    android:text="音乐"
                    android:textColor="#666666" />

                <Button
                    android:id="@+id/btnDocument"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/down_file_icon"
                    android:text="文档"
                    android:textColor="#666666" />

                <Button
                    android:id="@+id/btnApk"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/down_app_icon"
                    android:text="应用"
                    android:textColor="#666666" />
            </TableRow>
        </TableLayout>
    </FrameLayout>

    <View
        android:id="@+id/dismissView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>