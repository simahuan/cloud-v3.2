<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/errorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:visibility="visible" 
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="@drawable/header_top"
        android:gravity="center" >
        <TextView
            android:id="@+id/pisen_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="追剧"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="47dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/er"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/teleplay_wifi_disconnect" />
        
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_14"
            android:text="@string/teleplay_no_router"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/pisen_btnShop"
            android:layout_width="134dp"
            android:layout_height="@dimen/teleplay_no_router_device_height"
            android:background="@drawable/teleplay_router_bg"
            android:text="点击购买"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_15" 
            android:layout_gravity="center_vertical"
            />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginLeft="9dp"
            android:id="@+id/pisen_btnLook"
            android:layout_width="134dp"
            android:layout_height="@dimen/teleplay_no_router_device_height"
            android:background="@drawable/teleplay_router_bg"
            android:text="在线观看"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_15"
            android:layout_gravity="center_vertical"
             />
    </LinearLayout>

</LinearLayout>