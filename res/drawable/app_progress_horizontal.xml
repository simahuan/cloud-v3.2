<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#CCCCCC" />

            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#0073FF"
                    android:centerY="0.75"
                    android:endColor="#0073FF"
                    android:startColor="#0073FF" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#2A98FF"
                    android:centerY="0.75"
                    android:endColor="#0084FF"
                    android:startColor="#4FAAFF" />
            </shape>
        </clip>
    </item>

</layer-list>