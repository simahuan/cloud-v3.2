	        <item android:state_pressed="true">
				<shape android:shape="oval" >
		            <corners android:radius="@dimen/circle_90"/>
		            <solid android:color="@color/black" />
		            <size android:width="118dp" android:height="118dp"/>
        		</shape>
			</item>
	        
	        <item>
		        <shape android:shape="oval" >
		            <corners android:radius="@dimen/circle_90"/>
		            <solid android:color="@color/black" />
		            <size android:width="119dp" android:height="119dp"/>
		        </shape>
	        </item>
        
		</selector>
	</item>
	
</layer-list>